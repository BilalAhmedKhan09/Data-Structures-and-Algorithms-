#include<iostream>

using namespace std;

void traverse(int x, int y, int arr[4][4]){
    if(x!=4 & y!=4){
        if((x+1)!=0 & x!=4){
            x += 1;
            cout<<"x: "<<x<<"  y: "<<y<<endl;
            traverse(x, y);
        }
        else if(y!=4 & y != 0){
            y += 1;
            cout<<"x: "<<x<<"  y: "<<y<<endl;
            traverse(x,y);
        }
    }
    if(x==4,y==4){
        cout<<"You are here"<<endl;
    }
}

int main(){
    traverse(0,0);
}